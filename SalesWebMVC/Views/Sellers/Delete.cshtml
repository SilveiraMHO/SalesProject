@model SalesWebMVC.Models.Seller

@{
    ViewData["Title"] = "Delete";
}

<h2>@ViewData["Title"]</h2>

<h3>Are you sure you want to delete this Seller?</h3>

<div>
    <h4>Seller</h4>
    <hr />
    <dl class="dl-horizontal">
        <!--"dl" para listar os campos do objeto.-->

        <dt>
            <!--"dt" Para mostrar o nome do campo.-->
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            <!--"dd" Para mostrar o valor do campo-->
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BirthDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.BaseSalary)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.BaseSalary)
        </dd>

        <!--Form para cancelar ou confirmar delecao-->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" /> <!--Campo oculto responsavel por enviar o "Id" do Seller-->
            <input type="submit" value="Delete" class="btn btn-danger"/>
            <a asp-action="Index">Back To List</a> <!--Link para cancelar operacao e voltar para a lista de Sellers-->
        </form>
    </dl>
</div>